<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--
        These are the fallback styles, i.e. the styles applied if the brand doesn't supply its own
        styles for any particular target type.
    -->

    <Style x:Key="DefaultButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="3" />
        <Setter Property="FontSize" Value="30" />
    </Style>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DefaultButtonStyle}" />

    <Style x:Key="DefaultTextBoxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="Margin" Value="3" />
        <Setter Property="FontSize" Value="50" />
    </Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource DefaultTextBoxStyle}" />
    
    <Style x:Key="DefaultWindowStyle" TargetType="{x:Type Window}" />
    <Style TargetType="{x:Type Window}" BasedOn="{StaticResource DefaultWindowStyle}" />

</ResourceDictionary>