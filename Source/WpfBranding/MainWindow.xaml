<Window
    x:Class="WpfBranding.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:localization="http://www.fantasticfiasco.com/wpfbranding/localization"
    Title="{x:Static localization:Translations.ApplicationName}"
    Height="400"
    Width="300"
    ResizeMode="NoResize"
    Icon="pack://application:,,,/Brand;component/Graphics/App.ico"
    Style="{DynamicResource DefaultWindowStyle}">
    
    <!-- Resources -->
    <Window.Resources>
        <ResourceDictionary>
            
            <!-- Merge with the branded resource dictionary, i.e. let all branded styles affect the application. -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Brand;component/Styles/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>        
    </Window.Resources>
    
    <!-- Root element -->
    <Grid>
        
        <!-- Row and column definitions -->
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <!-- Input -->
        <TextBox
            Grid.ColumnSpan="4"
            VerticalContentAlignment="Center"
            TextAlignment="Right"
            IsReadOnly="True"
            Text="0" />

        <!-- Numeric input -->
        <Button
            Grid.Row="1"
            Content="1" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Content="2" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Content="3" />
        <Button
            Grid.Row="2"
            Content="4" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Content="5" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Content="6" />
        <Button
            Grid.Row="3"
            Content="7" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Content="8" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            Content="9" />
        <Button
            Grid.Row="4"
            Content="0" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            Content="." />
        
        <!-- Operators -->
        <Button
            Grid.Row="1"
            Grid.Column="3"
            Content="/" />
        <Button
            Grid.Row="2"
            Grid.Column="3"
            Content="*" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            Content="-" />
        <Button
            Grid.Row="4"
            Grid.Column="3"
            Content="+" />
        <Button
            Grid.Row="4"
            Grid.Column="2"
            Content="=" />
    </Grid>
</Window>